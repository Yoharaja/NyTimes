<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/layout_news_row_parent_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple_effect"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/layout_news_row_logo_iv"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@drawable/circle_image_bg" />

        <com.nytimes.android.nytimesapp.widget.TypefaceTextViewRoboto
            android:id="@+id/layout_news_row_title_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/layout_news_row_logo_iv"
            android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
            android:layout_toRightOf="@+id/layout_news_row_logo_iv"
            android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:text="@string/lorem_ipsum"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_16" />

        <com.nytimes.android.nytimesapp.widget.TypefaceTextViewRoboto
            android:id="@+id/layout_news_row_sub_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_news_row_title_t"
            android:layout_toEndOf="@+id/layout_news_row_logo_iv"
            android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
            android:layout_toRightOf="@+id/layout_news_row_logo_iv"
            android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:text="@string/lorem_ipsum"
            android:textSize="@dimen/dp_14" />

        <com.nytimes.android.nytimesapp.widget.TypefaceTextViewRoboto
            android:id="@+id/layout_news_row_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_news_row_sub_tv"
            android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
            android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textSize="@dimen/dp_12" />


        <ImageView
            android:id="@+id/nyt_news_item_arrow_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>